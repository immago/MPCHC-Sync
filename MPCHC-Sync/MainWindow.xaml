<Window x:Class="MPCHC_Sync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MPCHC_Sync"
        mc:Ignorable="d"
        Title="MPC-HC Sync" Height="165" Width="414" Closed="Window_Closed" ResizeMode="CanMinimize">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label x:Name="nameLabel" Content="Waiting for MPC-HC..." Grid.ColumnSpan="3" FontWeight="Bold" Background="Black" Foreground="White" VerticalContentAlignment="Stretch"/>
            <Label x:Name="statusLabel" Content="Status" Margin="0,1,0,0" Grid.Row="1" VerticalContentAlignment="Stretch"/>
            <Label x:Name="positionLabel" Content="0:00 / 0:00" Grid.Column="1" Margin="0,1,0,0" Grid.Row="1" Grid.ColumnSpan="2" VerticalContentAlignment="Stretch"/>
            <Button x:Name="connectButton" Content="Connect" Margin="5,2,0,5" Grid.Row="3" Click="connectButton_Click" Grid.ColumnSpan="2"/>
            <Button x:Name="hostButton" Content="Host" Margin="5,5,5,2" Grid.Row="2" Click="hostButton_Click" Grid.Column="2"/>
            <TextBox x:Name="connectAddressTextBox" Grid.Column="2" Margin="5,2.5,5,5" Grid.Row="3" TextWrapping="Wrap" Text="12345678-9abc-d234-5678-90abcd234567"/>
            <Button x:Name="settingsButton" Grid.ColumnSpan="2" Content="Settings" Margin="5,5,0,2" Grid.Row="2" Click="settingsButton_Click"/>
            <Grid x:Name="disconnectGrid" Margin="0" Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="3" Background="White" Visibility="Hidden">
                <Grid.RowDefinitions>
                    <RowDefinition Height="27*"/>
                    <RowDefinition Height="41*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65*"/>
                    <ColumnDefinition Width="319*"/>
                </Grid.ColumnDefinitions>
                <Label x:Name="connectedAddressLabel" Content="..." Grid.Column="1" Margin="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <Button x:Name="copyConnectedAddressButton" Content="Copy" Margin="5,0,0,0" Click="copyConnectedAddressButton_Click"/>
                <Button x:Name="disconnectButton" Content="Disconnect" Margin="5" Grid.Row="1" Grid.ColumnSpan="2" Click="disconnectButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
