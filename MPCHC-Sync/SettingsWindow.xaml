            <TextBox x:Name="tokenTextBox" Grid.Column="1" Margin="1" Grid.Row="1" TextWrapping="Wrap" Text="86de0ff4-3115-4385-b485-b5e83ae6b890" Width="262" Padding="0,5,0,0"/>
            <TextBox x:Name="serverPortTextBox" Grid.Column="1" Margin="221,1,1,1" TextWrapping="Wrap" Text="5000" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Padding="0,5,0,0"/>
        </Grid>
    </Grid>
</Window>
