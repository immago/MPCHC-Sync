        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Content="Server address" HorizontalContentAlignment="Right" Background="#FFDDDDDD" Margin="2,1,1,1"/>
            <Label Content="Token" Grid.Row="1" HorizontalContentAlignment="Right" Background="#FFDDDDDD" Margin="2,1,1,1"/>
            <Label Content="MPC address" Grid.Row="2" Margin="2,1,1,1" HorizontalContentAlignment="Right" Background="#FFDDDDDD"/>
            <TextBlock x:Name="mpcTextBlock" Grid.Column="1" TextWrapping="Wrap" Text="http://localhost:13579" VerticalAlignment="Center" Grid.Row="2" Margin="0" IsEnabled="False"/>
            <Button x:Name="saveButton" Content="Save" Grid.Row="3" Grid.ColumnSpan="2" Margin="2,1,2,2" Click="saveButton_Click"/>
